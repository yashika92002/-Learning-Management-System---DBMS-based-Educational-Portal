  <div class="row">
    <div class="col">
      <div class="field">
        <label class="label">First Name <span style="color: red;">*</span></label>
        <div class="control has-icons-left has-icons-right">
          <input required class="input is-success" type="text" placeholder="first name">
          <span class="icon is-small is-left">
            <i class="fa fa-user"></i>
          </span>
        </div>
    </div>
    </div>

    <div class="col">
      <div class="field">
        <label class="label">Middle Name</label>
        <div class="control has-icons-left has-icons-right">
          <input class="input is-success" type="text" placeholder="middle name">
          <span class="icon is-small is-left">
            <i class="fa fa-user"></i>
          </span>
        </div>
    </div>
    </div>
    
    <div class="col">
      <div class="field">
        <label class="label">Last Name <span style="color: red;">*</span></label>
        <div class="control has-icons-left has-icons-right">
          <input required class="input is-success" type="text" placeholder="last name">
          <span class="icon is-small is-left">
            <i class="fa fa-user"></i>
          </span>
        </div>
    </div>
  </div>
  </div>

<br>
              <div class='row'>
                <div class='col '>
                    <div class="field">
                      <label class="label">Gender: <span style="color: red;">*</span></label>
                        <div class="control root">
                          <label class="radio">
                            <input required type="radio" name="gender" value='Male'>
                            <span class="icon">
                                <i class="fa fa-male male fa-2x "></i>
                              </span>
                          </label>
                          <label class="radio">
                            <input required type="radio" name="gender" value='Female'>
                            <span class="icon">
                                <i class="fa fa-female female fa-2x"></i>
                              </span>
                          </label>
                         </div>
                        </div>
                        </div>
  
                <div class='col'>
                    <div class="field">
                      <label class="label">Birth Date <span style="color: red;">*</span></label>
                        <p class="control has-icons-left has-icons-right">
                          <input   required class="input is-success" name='birthdate' type="date">
                          <span class="icon is-small is-left">
                            <i class="fa fa-calendar-check-o" aria-hidden="true"></i>
                          </span>
                        </p>
                      </div>
                    </div>
                </div>
        
  
  
  
              <div class="row">
                <div class="col">
                  <div class="field">
                    <label class="label">Address</label>
                    <div class="control has-icons-left has-icons-right">
                      <input class="input is-success" type="text" placeholder="Permanent Address ">
                      <span class="icon is-small is-left">
                        <i class="fa fa-address-card"></i>
                      </span>
                    </div>
                </div>
                </div>
              </div>
  <br>
  
              
  
                <div class="row">
                  <div class="col">
                    <div class="field">
                      <label class="label">Contact Number <span style="color: red;">*</span></label>
                      <div class="control has-icons-left has-icons-right">
                        <input required class="input is-success" type="text" placeholder="E.g. 0123456789 ">
                        <span class="icon is-small is-left">
                          <i class="fa fa-mobile"></i>
                        </span>
                      </div>
                  </div>
                  </div>
                  <div class="col">
                    <label class="label">Department <span style="color: red;">*</span></label>
                    <div class="control has-icons-left">
                      <div class="select is-success">
                        <select required style="width: 495px;">
                          <option selected>-Select Department-</option>
                          <option>CSE/IT</option>
                          <option>ECE/ETE</option>
                          <option>ME/AU</option>
                          <option>EE</option>
                          <option>Civil</option>
                          <option>Chemical</option>
                        </select>
                      </div>
                      <div class="icon is-small is-left">
                        <i class="fa fa-university"></i>
                      </div>
                    </div>
                  </div>
                  </div>
                  <br>
  
                <div class="row">
                  <div class="col">
                    <div class="field">
                      <label class="label">Email <span style="color: red;">*</span></label>
                      <div class="control has-icons-left has-icons-right">
                        <input required class="input is-success" type="email" placeholder="Email input">
                        <span class="icon is-small is-left">
                          <i class="fa fa-envelope"></i>
                        </span>
                        <span class="icon is-small is-right">
                          <!-- <i class="fa fa-exclamation-triangle"></i> -->
                        </span>
                      </div>
                  </div>
                  </div>
                  <div class="col">
                    <div class="field">
                      <label class="label">Choose Profile Password <span style="color: red;">*</span></label>
                      <div class="control has-icons-left has-icons-right">
                        <input required class="input is-success" type="password">
                        <span class="icon is-small is-left">
                          <i class="fa fa-lock"></i>
                        </span>
                      </div>
                  </div>
                </div>
                </div>
                <br>
  
  
                <div class="row">
                  <div class="col">
                    <label class="label">Notes</label>
                    <textarea class="textarea is-success textarea is-small" placeholder="Textarea.."></textarea>
                  </div>
                </div>
                <br>
  
                <div class="row">
                  <div class="col">
                    <div class="field is-grouped is-grouped-centered">
                      <p class="control">
                        <a class="button is-primary">
                          Save
                        </a>
                      </p>
                      <p class="control">
                        <a class="button is-light">
                          Cancel
                        </a>
                      </p>
                    </div>
                   </div>
                </div>
            
                
  
  
  
  
  
  
  
