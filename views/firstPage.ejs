    <form action='/first/chkStudent' >
      <div class='root'>
          <div class='subdiv'>
            <div style=" padding: 10px;">
        <div style="display: flex; flex-direction: row; justify-content: space-evenly;">
          <div  style=" width: 55%; display: flex; " >
            <img height="100px" src='/images/loginImage.png'> 
          </div>

          <div   style=" width: 35%;">
           <div class='aligncenter gap'>
             <h2 style=" font-weight: bold;  color: darkviolet;">Student Login</h2>
           </div>
           <div class='row aligncenter gap'>
            <div class="field">
              <p class="control has-icons-left has-icons-right">
                <input required class="input" type="email" placeholder="Email Address" name='emailid'>
                <span class="icon is-small is-left">
                  <i class="fa fa-envelope"></i>
                </span>
                <span class="icon is-small is-right">
                  <i class="fa fa-check"></i>
                </span>
              </p>
            </div>
           </div>
           <div class='row aligncenter gap'>
            <div class="field">
              <p class="control has-icons-left has-icons-right">
                <input required id='pwd'class="input" type="password" placeholder="Password" name='password'>
                <span class="icon is-small is-left">
                  <i class="fa fa-lock"></i>
                </span>
                <span class="icon is-small is-right">
                  <i class="fa fa-check"></i>
                </span>
              </p>
            </div>
           </div>
           <div class="buttons" style="display: flex; justify-content: space-evenly;">
            <button class="button is-primary" type="submit">Login</button>
            <a class="button is-primary" href="" >Forgot Password </a>
           
          </div>

          </div>

        </div>
        
    </div>
