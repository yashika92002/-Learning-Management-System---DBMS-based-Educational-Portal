        <form action="/first/registerStudent">
      <div class="root">
          <div class="subdiv">

            <nav class="navbar" role="navigation" aria-label="main navigation">
              <div class="navbar-brand" >
                <i class="fa fa-graduation-cap fa-2x">&nbsp;&nbsp;</i>
               <b root style=" letter-spacing: 2; font-size:xx-large;">&nbsp;&nbsp;Student's Information Form</b>
            
                <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false">
                  <span aria-hidden="true"></span>
                  <span aria-hidden="true"></span>
                  <span aria-hidden="true"></span>
                </a>
              </div>
            </nav>
<br>
            <div class="row">
              <div class="col">
                <div class="field">
                  <label class="label">First Name <span style="color: red;">*</span></label>
                  <div class="control has-icons-left has-icons-right">
                    <input name="fname" required class="input is-success" type="text" placeholder="first name">
                    <span class="icon is-small is-left">
                      <i class="fa fa-user"></i>
                    </span>
                  </div>
              </div>
              </div>

              <div class="col">
                <div class="field">
                  <label class="label">Middle Name</label>
                  <div class="control has-icons-left has-icons-right">
                    <input name="mname" class="input is-success" type="text" placeholder="middle name">
                    <span class="icon is-small is-left">
                      <i class="fa fa-user"></i>
                    </span>
                  </div>
              </div>
              </div>
              
              <div class="col">
                <div class="field">
                  <label class="label">Last Name <span style="color: red;">*</span></label>
                  <div class="control has-icons-left has-icons-right">
                    <input name="lname" required class="input is-success" type="text" placeholder="last name">
                    <span class="icon is-small is-left">
                      <i class="fa fa-user"></i>
                    </span>
                  </div>
              </div>
            </div>
            </div>

<br>
            <div class='row'>
              <div class='col '>
                  <div class="field">
                    <label class="label">Gender: <span style="color: red;">*</span></label>
                      <div class="control root">
                        <label class="radio">
                          <input name="gender" required type="radio" name="gender" value='Male'>
                          <span class="icon">
                              <i class="fa fa-male male fa-2x "></i>
                            </span>
                        </label>
                        <label class="radio">
                          <input name="gender" required type="radio" name="gender" value='Female'>
                          <span class="icon">
                              <i class="fa fa-female female fa-2x"></i>
                            </span>
                        </label>
                       </div>
                      </div>
                      </div>

              <div class='col'>
                  <div class="field">
                    <label class="label">Birth Date <span style="color: red;">*</span></label>
                      <p class="control has-icons-left has-icons-right">
                        <input name="dob"  required class="input is-success" name='birthdate' type="date">
                        <span class="icon is-small is-left">
                          <i class="fa fa-calendar-check-o" aria-hidden="true"></i>
                        </span>
                      </p>
                    </div>
                  </div>
              </div>
      



            <div class="row">
              <div class="col">
                <div class="field">
                  <label class="label">Address</label>
                  <div class="control has-icons-left has-icons-right">
                    <input name="address" class="input is-success" type="text" placeholder="Permanent Address ">
                    <span class="icon is-small is-left">
                      <i class="fa fa-address-card"></i>
                    </span>
                  </div>
              </div>
              </div>
            </div>
<br>

            <div class="row">
              <div class="col">
                <label class="label">Institute <span style="color: red;">*</span></label>
                <div class="control has-icons-left">
                  <div class="select is-success">
                    <select name="collg" required style="width: 495px;">
                      <option selected>-Select Institute-</option>
                      <option>IIIT Bhopal</option>
                      <option>MITS Gwalior</option>
                    </select>
                  </div>
                  <div class="icon is-small is-left">
                    <i class="fa fa-university"></i>
                  </div>
                </div>
              </div>
              <div class="col">
                <label class="label">Course <span style="color: red;">*</span></label>
                <div class="control has-icons-left">
                  <div class="select is-success">
                    <select name="course" required style="width: 495px;">
                      <option selected>-Select Course-</option>
                      <option>B.tech</option>
                      <option>M.tech</option>
                    </select>
                  </div>
                  <div class="icon is-small is-left">
                    <i class="fa fa-book"></i>
                  </div>
                </div>
              </div>
              </div>
              <br>

              <div class="row">
                <div class="col">
                  <div class="field">
                    <label class="label">Enrollment Number <span style="color: red;">*</span></label>
                    <div class="control has-icons-left has-icons-right">
                      <input name="rollnum" required class="input is-success" type="text" placeholder="E.g. 0901AU181063 ">
                      <span class="icon is-small is-left">
                        <i class="fa fa-list-ol"></i>
                      </span>
                    </div>
                </div>
                </div>
                <div class="col">
                  <label class="label">Department <span style="color: red;">*</span></label>
                  <div class="control has-icons-left">
                    <div class="select is-success">
                      <select name="dept" required style="width: 495px;">
                        <option selected>-Select Department-</option>
                        <option>CSE/IT</option>
                        <option>ECE/ETE</option>
                        <option>ME/AU</option>
                        <option>EE</option>
                        <option>Civil</option>
                        <option>Chemical</option>
                      </select>
                    </div>
                    <div class="icon is-small is-left">
                      <i class="fa fa-university"></i>
                    </div>
                  </div>
                </div>
                </div>
                <br>

                
            <div class="row">
              <div class="col">
                <label class="label">Semester <span style="color: red;">*</span></label>
                <div class="control has-icons-left">
                  <div class="select is-success">
                    <select name="sem" required style="width: 495px;">
                      <option selected>-Select Semester-</option>
                      <option>I</option>
                      <option>II</option>
                      <option>III</option>
                      <option>IV</option>
                      <option>V</option>
                      <option>VI</option>
                      <option>VII</option>
                      <option>VIII</option>
                    </select>
                  </div>
                  <div class="icon is-small is-left">
                    <i class="fa fa-circle"></i>
                  </div>
                </div>
              </div>
              <div class="col">
                <label class="label">Contact Number <span style="color: red;">*</span></label>
                <div class="control has-icons-left">
                  <div class="control has-icons-left has-icons-right">
                    <input name="mob" required class="input is-success" type="text" placeholder="E.g. 0123456789 ">
                    <span class="icon is-small is-left">
                      <i class="fa fa-mobile"></i>
                    </span>
                  </div>
                </div>
              </div>
              </div>
              <br>

              <div class="row">
                <div class="col">
                  <div class="field">
                    <label class="label">Email <span style="color: red;">*</span></label>
                    <div class="control has-icons-left has-icons-right">
                      <input name="mail" required class="input is-success" type="email" placeholder="Email input">
                      <span class="icon is-small is-left">
                        <i class="fa fa-envelope"></i>
                      </span>
                      <span class="icon is-small is-right">
                        <!-- <i class="fa fa-exclamation-triangle"></i> -->
                      </span>
                    </div>
                </div>
                </div>
                <div class="col">
                  <div class="field">
                    <label class="label">Choose Profile Password <span style="color: red;">*</span></label>
                    <div class="control has-icons-left has-icons-right">
                      <input name="pswd" required class="input is-success" type="password">
                      <span class="icon is-small is-left">
                        <i class="fa fa-lock"></i>
                      </span>
                    </div>
                </div>
              </div>
              </div>
              <br>


              <div class="row">
                <div class="col">
                  <label class="label">Notes</label>
                  <textarea name="notes" class="textarea is-success textarea is-small" placeholder="Textarea.."></textarea>
                </div>
              </div>
              <br>

              <div class="row">
                <div class="col">
                  <div class="field is-grouped is-grouped-centered">
                    <p class="control">
                      <div class="buttons">
                        <button class="button is-primary" type="submit">Create Account</button>
                        <button class="button is-primary" type="reset">Reset</button>
                       
                      </div>
                    </p>
                  </div>
                 </div>
              </div>
          
            







          </div>
      </div>
      <div class='gap'></div>
      <br>
      <br>
      <!-- footer section start -->
      <footer>
          <span>Created By <a href="#">YashikaS</a> | <span class="far fa-copyright"></span> 2021 All rights reserved.</span>
      </footer>
    </form>
