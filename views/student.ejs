    <body style="background-color: #ecf0f1;">
      <div style="display: flex; justify-content: center; align-items: center; ">
          <div style="width: 70%; height: 166vh; background-color: white;">
  
      <!-- Navigation Bar  -->
      <nav class="navbar" style="background:#ffbe76; " role="navigation" aria-label="main navigation">
