<form action="/first/uploadassg" method="POST" enctype="multipart/form-data">
  <!-- right  -->
  <div class="row">
    <div class="col">
        <div class="field">
          <label class="label">Institute <span style="color: red;">*</span></label>
          <div class="control has-icons-left has-icons-right">
            <input name="institute" style="width: 360px;" required class="input is-success" type="text" value="MITS Gwalior" readonly>
            <span class="icon is-small is-left">
              <i class="fa fa-university"></i>
            </span>
          </div>
      </div>
      </div>
    <div class="col">
      <label class="label">Course <span style="color: red; ">*</span></label>
      <div class="control has-icons-left">
        <div class="select is-success">
          <select name="course" required style="width: 360px;" >
            <option selected>-Select Course-</option>
            <option>B.tech</option>
          </select>
        </div>
        <div class="icon is-small is-left">
          <i class="fa fa-book"></i>
        </div>
      </div>
    </div>
    </div>
