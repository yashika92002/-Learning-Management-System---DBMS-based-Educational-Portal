                        <span class="icon is-small is-left">
                          <i class="fa fa-calendar-check-o" aria-hidden="true"></i>
                        </span>
                      </p>
                    </div>
                    </div>

            <div class='col'>
                <div class="field">
                  <label class="label">Due Date <span style="color: red;">*</span></label>
                    <p class="control has-icons-left has-icons-right">
                      <input name="ddate" style="width: 360px;"  required class="input is-success" name='birthdate' type="date">
                      <span class="icon is-small is-left">
                        <i class="fa fa-calendar-check-o" aria-hidden="true"></i>
                      </span>
                    </p>
                  </div>
                </div>
            </div>
            <!-- right  -->
<br>

            <div class="row">
