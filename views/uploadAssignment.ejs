          <label class="label">Department <span style="color: red;">*</span></label>
          <div class="control has-icons-left">
            <div class="select is-success">
                <select name="dept" required style="width: 360px;">
                    <option selected>-Select Department-</option>
                    <option>CSE/IT</option>
                    <option>ECE/ETE</option>
                    <option>ME/AU</option>
                    <option>EE</option>
                    <option>Civil</option>
                    <option>Chemical</option>
                  </select>
            </div>
            <div class="icon is-small is-left">
              <i class="fa fa-university"></i>
            </div>
          </div>
          </div>
          <div class="col">
            <div class="field">
              <label class="label">Assignment Number <span style="color: red;">*</span></label>
              <div class="control has-icons-left has-icons-right">
                <input name="assgnum" style="width: 360px;" required class="input is-success" type="text" placeholder="Assignment Number" >
                <span class="icon is-small is-left">
                  <i class="fa fa-list-ol"></i>
                </span>
              </div>
          </div>
          </div>
        </div>
        <br>
        <!-- right  -->
    
    <!-- right  -->
