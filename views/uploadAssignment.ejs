              <select name="sem" required style="width: 360px;">
                <option selected>-Select Semester-</option>
                <option>I</option>
                <option>II</option>
                <option>III</option>
                <option>IV</option>
                <option>V</option>
                <option>VI</option>
                <option>VII</option>
