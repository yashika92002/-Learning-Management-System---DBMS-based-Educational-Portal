<form action="/first/viewassg">
    
    <!-- right  -->
    <div class="row">
        <div class="col">
          <label class="label">Department <span style="color: red;">*</span></label>
          <div class="control has-icons-left">
            <div class="select is-success">
                <select name="dept" required style="width: 750px;">
                    <option selected>-Select Department-</option>
                    <option>CSE/IT</option>
                    <option>ECE/ETE</option>
                    <option>ME/AU</option>
                    <option>EE</option>
                    <option>Civil</option>
                    <option>Chemical</option>
                  </select>
            </div>
            <div class="icon is-small is-left">
              <i class="fa fa-university"></i>
            </div>
          </div>
          </div>
          
        </div>
        <br>
        <!-- right  -->
    
    <!-- right  -->
    <div class="row">
        <div class="col">
          <label class="label">Semester <span style="color: red;">*</span></label>
          <div class="control has-icons-left">
            <div class="select is-success">
              <select name="sem" required style="width: 360px;">
                <option selected>-Select Semester-</option>
                <option>I</option>
                <option>II</option>
                <option>III</option>
                <option>IV</option>
                <option>V</option>
                <option>VI</option>
                <option>VII</option>
                <option>VIII</option>
              </select>
            </div>
            <div class="icon is-small is-left">
              <i class="fa fa-circle"></i>
            </div>
          </div>
          </div>
        <div class="col">
          <label class="label">Subject <span style="color: red;">*</span></label>
          <div class="control has-icons-left">
            <div class="select is-success">
              <select name="subject" required style="width: 360px;">
                <option selected>-Select Subject-</option>
                <option>CSE-101 Engineering Workshop</option>
                <option>CSE-222 COA</option>
                <option>CSE-222 SE-LAB</option>
                <option>IT-101 Engineering Workshop</option>
                <option>IT-222 COA</option>
                <option>IT-222 SE-LAB</option>
              </select>
            </div>
            <div class="icon is-small is-left">
              <i class="fa fa-circle"></i>
            </div>
          </div>
        </div>
        </div>
        <br>
        <!-- right  -->


      

            <div class="row">
                <div class="col">
                    <div class="root" >
                        <div class="navbar-item">
                          <div class="buttons">
                            <button type="submit" style="float: inline-start;" class="button is-warning">
                              <strong>View</strong>
                            </button>
                            
                          </div>
                        </div>
                      </div>
                </div>

                <div class="col">
                    <div class="root" >
                        <div class="navbar-item">
                          <div class="buttons">
                            <button type="reset" style="float: inline-start;" class="button is-warning">
                              <strong>Reset</strong>
                            </button>
                            
                          </div>
                        </div>
                      </div>
                </div>
            </div>
              <% if(msg=='true') { %>
              <table>
                <tr>
                  <th>
                    Roll No.
                  </th>
                  <th>
                    Submmited Date
                  </th>
                  <th>
                    Assignment 
                  </th>
                </tr>
                <% data.map((item,index)=>{ %>
                  <tr>
                    <td>
                   <%= item.rollNum %>
                  </td>
                  <td>
                   <%= item.submittedDate %>
                  </td>
                  <td>
                    <a href="/images/<%=item.file%>" download="Assignment">
                      <button type="button">Download</button>
                      </a>
                  </td>
                  </tr>
                <% }) %>
              </table>
                <% } else if (msg !='false') {%>
                  <h2>No result Found</h2>
              <% } %>
  
            </div>
        </div>
         <!-- right  -->    
            
        </div>
          
          
    </div>
</form>   

